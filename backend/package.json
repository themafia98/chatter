{
  "name": "runtime-chatter-backend",
  "version": "0.1.0",
  "main": "dist/server.js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "run:dev": "pm2 start ./src/config/pm2/pm2-dev-process.config.js",
    "run:prod": "pm2 start ./dist/config/pm2/pm2-prod-process.config.js",
    "monitor": "pm2 monit",
    "logs": "pm2 logs api-chatter --lines 2000",
    "stop": "pm2 delete api-chatter && yarn clean",
    "clean": "rimraf ./dist/* && rimraf ./logs/*",
    "prettier": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path .gitignore",
    "sequelize:init": "sequelize-cli model:generate --name User --attributes id_user:uuidv4,name:char,create_date:date,password:char,phone:char,photo:char"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/multer": "^1.4.5",
    "@types/passport": "^1.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/sequelize": "^4.28.9",
    "@types/socket.io": "^2.1.12",
    "@types/uuid": "^8.3.0",
    "concurrently": "^5.3.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^4.4.1",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-openid": "^0.4.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "pm2": "^4.5.1",
    "response-time": "^2.3.2",
    "sequelize": "^6.4.0",
    "sequelize-cli": "^6.2.0",
    "socket.io": "^3.1.0",
    "uuid": "^8.3.2"
  }
}
