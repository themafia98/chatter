{
  "name": "runtime-chatter-backend",
  "version": "0.1.0",
  "main": "dist/server.js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "run:dev": "pm2 start ./src/config/pm2/pm2-dev-process.config.js",
    "run:prod": "pm2 start ./dist/config/pm2/pm2-prod-process.config.js",
    "monitor": "pm2 monit",
    "logs": "pm2 logs api-chatter --lines 2000",
    "stop": "pm2 delete api-chatter && yarn clean",
    "clean": "rimraf ./dist/* && rimraf ./logs/*",
    "prettier": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/socket.io": "^2.1.12",
    "concurrently": "^5.3.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "pm2": "^4.5.1",
    "sequelize": "^6.4.0",
    "socket.io": "^3.1.0"
  }
}
